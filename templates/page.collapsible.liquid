{% for item in items %}
  <div class="collapsible-row">
    <div class="collapsible-header">
      <h2>{{ item }}</h2>
      <button type="button" class="toggle-button">+</button>
    </div>
    <div class="collapsible-content">
      <p>Size Chart for {{ item }}.</p>
      <img src="{{ images[forloop.index0] }}" alt="{{ item }}">
    </div>
  </div>
{% endfor %}

<!-- CSS -->
<style>
.collapsible-row {
  border: 0px solid #ccc;
  margin: 25px 0;
  padding: 10px;
}

.collapsible-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.collapsible-content {
  display: none;
  margin-top: 10px;
}

.collapsible-content.active {
  display: block;
}

.collapsible-content img {
  max-width: 90%;
  height: auto;
  margin-top: 10px;
}
</style>

<!-- JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const headers = document.querySelectorAll('.collapsible-header');
  headers.forEach(header => {
    header.addEventListener('click', function() {
      const content = this.nextElementSibling;
      content.classList.toggle('active');
      
      const button = this.querySelector('.toggle-button');
      button.textContent = content.classList.contains('active') ? '-' : '+';
    });
  });
});
</script>
