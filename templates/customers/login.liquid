<!-- templates/customers/login.liquid -->

<section class="
  {{ section.settings.color_scheme }} 
  {{ section.settings.color_border }}
  {{ section.settings.style_border }}">

  <div class="py-24
    {{ settings.layout_horizontal }}
    {{ settings.layout_alignment }}">

    <div class="max-w-prose w-full">
      <h1 id="recover">
        {{ 'customer.account.reset_password' | t }}
      </h1>
      <div class="w-full">
        {% form 'recover_customer_password' %}
          {% assign recover_success = form.posted_successfully? %}
          {% if form.errors %}
            <div class="color__bg-overlay-1 p-1">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
  
          
          <label for="reset_customer_email">{{ 'customer.account.email' | t }}</label><br/>
          <input id="reset_customer_email" class="mb-4" type="email" name="email" />
  
          
          <button class="btn mb-4">
            {{ 'customer.account.submit' | t }}
          </button>
  
          
          <div class="border--t-width color__border-divider-1 pt-4">
            <a href="#login" class="btn btn--plain">
              {{ 'customer.account.log_in' | t }}
            </a>
          </div>
        {% endform %}
      </div>
  
      <h1 id="login">
        {{ 'customer.account.log_in' | t }}
      </h1>
      <div class="w-full">
        {% form 'customer_login' %}
          {% if recover_success == true %}
            <h3 class="color__bg-overlay-1 type--small border--radius p-2 mt-2 mb-4" tabindex="-1" autofocus>
              {{ 'customer.account.recover_success' | t }}
            </h3>
          {% endif %}
          {% if form.errors %}
            <div class="color__bg-overlay-1 type--small border--radius p-2 mt-2 mb-4">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          
          
          <label for="customer_email">{{ 'customer.account.email' | t }}</label><br/>
          <input id="customer_email" class="mb-4" type="email" name="customer[email]" />
  
          
          <label for="customer_password">{{ 'customer.account.password' | t }}</label><br/>
          <input id="customer_password" class="mb-4" type="password" name="customer[password]" />
  
          
          <button type="submit" class="btn mb-4">
            {{ 'customer.account.log_in' | t }}
          </button>
          
          
          <div class="border--t-width color__border-divider-1 pt-4">
            <p>{{ 'customer.account.password_prompt' | t }}</p>
            <div class="flex gap-4">
              <a href="#recover" class="btn btn--plain">
                {{ 'customer.account.forgot' | t }}
              </a>
              <a href="{{ routes.account_register_url }}" class="btn btn--plain">
                {{ 'customer.account.sign_up' | t }}
              </a>
            </div>
          </div>
        {% endform %}
      </div>
    </div>

  </div>
  
</section>